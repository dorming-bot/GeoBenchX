            "task_ID": "TASK_1_2_034",
            "task_text": "Compare the two vector extents of The source region of the Yellow River and the Jiuzhaigou earthquake zone, and calculate the percentage of their overlapping area relative to their respective total areas.",
            "task_labels": [
                "Spatial operations",
                "Task Set 03",
                "Process, Merge, Visualize",
                "Merge, Visualize",
                "Heatmaps, Contour Lines"
            ],
            "reference_solution_description": "Load the Yellow River source-region and Jiuzhaigou earthquake-zone polygons, compute their areas, intersect the two extents, measure the overlap, and divide the overlap area by each region's total area to report the percentage coverage for both datasets.",
            "reference_solutions": [
                {
                    "steps": [
                        {
                            "function_name": "load_geodata",
                            "arguments": {
                                "geodataset": "The source region of the Yellow River",
                                "output_geodataframe_name": "yellow_river_region"
                            },
                            "comment": "Load the Yellow River source region polygons so their extent is ready for measurement and overlap analysis."
                        },
                        {
                            "function_name": "load_geodata",
                            "arguments": {
                                "geodataset": "Jiuzhaigou earthquake zone",
                                "output_geodataframe_name": "jiuzhaigou_earthquake_zone"
                            },
                            "comment": "Load the Jiuzhaigou earthquake zone extent so it can be compared against the Yellow River region."
                        },
                        {
                            "function_name": "calculate_polygon_areas",
                            "arguments": {
                                "geodataframe_name": "yellow_river_region",
                                "output_variable_name": "yellow_river_area_stats",
                                "area_column_name": "yellow_river_area_sq_km"
                            },
                            "comment": "Project and measure the Yellow River source region to obtain both per-feature areas and the total area value."
                        },
                        {
                            "function_name": "calculate_polygon_areas",
                            "arguments": {
                                "geodataframe_name": "jiuzhaigou_earthquake_zone",
                                "output_variable_name": "jiuzhaigou_area_stats",
                                "area_column_name": "jiuzhaigou_area_sq_km"
                            },
                            "comment": "Repeat the area calculation for the Jiuzhaigou earthquake zone so its total footprint is known."
                        },
                        {
                            "function_name": "analyze_vector_overlap",
                            "arguments": {
                                "geodataframe_a_name": "yellow_river_region",
                                "geodataframe_b_name": "jiuzhaigou_earthquake_zone",
                                "output_geodataframe_name": "overlap_area"
                            },
                            "comment": "Intersect the two regions to isolate their shared footprint."
                        },
                        {
                            "function_name": "calculate_polygon_areas",
                            "arguments": {
                                "geodataframe_name": "overlap_area",
                                "output_variable_name": "overlap_area_stats",
                                "area_column_name": "overlap_area_sq_km"
                            },
                            "comment": "Measure the overlap polygon so the shared area value is available for percentage calculations."
                        },
                        {
                            "function_name": "perform_arithmetic_operation",
                            "arguments": {
                                "values": [
                                    "state:overlap_area_stats.total_area_sq_km",
                                    "state:yellow_river_area_stats.total_area_sq_km"
                                ],
                                "operation": "divide",
                                "output_variable_name": "overlap_vs_yellow_ratio"
                            },
                            "comment": "Divide overlap area by the Yellow River total area to determine the proportional coverage (multiply by 100 later for percent formatting)."
                        },
                        {
                            "function_name": "perform_arithmetic_operation",
                            "arguments": {
                                "values": [
                                    "state:overlap_area_stats.total_area_sq_km",
                                    "state:jiuzhaigou_area_stats.total_area_sq_km"
                                ],
                                "operation": "divide",
                                "output_variable_name": "overlap_vs_jiuzhaigou_ratio"
                            },
                            "comment": "Divide overlap area by the Jiuzhaigou total area, giving the second percentage for comparison."
                        }
                    ]
